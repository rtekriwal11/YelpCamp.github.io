<%- include ("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome to YelpCamp
			</h1>
			<p>
				view our handpicked campgrounds all over world
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="campground/search">Add New Campaign</a>
			</p>
		</div>
	</header>


<div class="row text-center" style="display:flex; flex-wrap: wrap;">
	<% campground.forEach(function(ca){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
			<img src=" <%= ca.image %>">
			<div class="caption">
				<h4><%= ca.name %></h4>
			</div>
			<p>
				<a href="/campground/<%- ca._id%>" class="btn btn-primary">more info</a>
			</p>
		</div>
</div>
<% }) %>
	
	</div>
<%- include ("../partials/footer") %>
</div>